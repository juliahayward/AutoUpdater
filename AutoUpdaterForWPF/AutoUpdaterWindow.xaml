<Window x:Class="AutoUpdaterForWPF.AutoUpdaterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Updates" Height="500" Width="500">
    <StackPanel Orientation="Vertical">
        <Label x:Name="Blurb">An update is available:</Label>
        <WebBrowser x:Name="Browser" Width="472" Height="386" Margin="10,10,10,10"></WebBrowser>
            <StackPanel Orientation="Horizontal" Height="24">
                <Button Width="80" Margin="290,0,0,0" Click="update_Click">Update</Button>
                <Button Width="80" Margin="22,0,0,0" Click="notThisTime_Click">Not this time</Button>
            </StackPanel>
    </StackPanel>
</Window>
